  <builders>
    <hudson.tasks.Shell>
      <command>#!/bin/bash -xe

# copy the required files from git repo
cp -r &quot;${LINUX_GIT_DIR}/harvester&quot;  .
cp -r &quot;${LINUX_GIT_DIR}/imports&quot;  .
cp -r &quot;${LINUX_GIT_DIR}/build.sh&quot; .

# This job assumes that env like BOOST64_DIR are
# set as globals in the system
./build.sh --arch=x64_lib --static_cpp_lib=${VC_STDCPLUS_PLUS_STATIC_DIR}

# copy the 64-bit recorder lib to package
cp build64/lib64/libVcRecorderLib.so &quot;${LINUX_PACKAGE_DIR}/release/lib64/.&quot;
cd &quot;${LINUX_PACKAGE_DIR}&quot;
tar -cvzf harvester.linux_$VCTOOLS_VERSION.tgz release

# install VcTools in Vectorcast dir 
if [ ! -z &quot;$LINUX_VECTORCAST_DIR&quot; ]; then
export VECTORCAST_DIR=&quot;${LINUX_VECTORCAST_DIR}&quot;
cd release
./install.sh
fi

</command>
    </hudson.tasks.Shell>
    <hudson.plugins.parameterizedtrigger.TriggerBuilder plugin="parameterized-trigger@2.33">
      <configs>
        <hudson.plugins.parameterizedtrigger.BlockableBuildTriggerConfig>
          <configs>
            <hudson.plugins.parameterizedtrigger.CurrentBuildParameters/>
          </configs>
          <projects>Build_Linux64_full</projects>
          <condition>ALWAYS</condition>
          <triggerWithNoParameters>false</triggerWithNoParameters>
          <triggerFromChildProjects>false</triggerFromChildProjects>
          <block>
            <buildStepFailureThreshold>
